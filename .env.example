# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Database Connection
# Get from: https://app.supabase.com/project/_/settings/database
# Use port 5432 for direct connection (migrations)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-1-eu-west-1.pooler.supabase.com:5432/postgres"

# Supabase Public Configuration
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_publishable_key_here